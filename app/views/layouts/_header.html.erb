<div id ="custom-navbar" class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "icongrey.png" %>
      <% end %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse navbar-menubuilder">

      <ul class="nav navbar-nav">
        <li><%= link_to root_path do %><i class="fa fa-home"></i> Home<% end %></li>
        <li><%= link_to about_path do %><i class="fa fa-info-circle"></i> About<% end %></li>
        <li><%= link_to new_support_ticket_path do %><i class="fa fa-paper-plane"></i> Contact<% end %></li>
        <li><%= link_to vacants_path do %><i class="fa fa-building-o"></i> Locations<% end %></li>
        <li><%= link_to projects_path do %><i class="fa fa-map-o"></i> Projects<% end %></li>
        <li><%= link_to users_path do %><i class="fa fa-users"></i> Users<% end %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <!-- Begin Dropdown -->
          <li id="dropdown_toggle" class="dropdown">
            <a href="#" class="dropdown" id="user_dropdown" data-toggle="dropdown" role="button">
              <i class="fa fa-user"></i> <%= current_user.username %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <!-- <li><a href="#"><i class="fa fa-building-o"></i> My Locations</a></li> -->
              <li><%= link_to my_projects_path(current_user.id) do %><i class="fa fa-building-o"></i> My Projects<% end %></li>
              <li><%= link_to user_path(current_user) do %><i class="fa fa-user"></i> My Profile<% end %></li>
              <li><%= link_to edit_profile_path(current_user.id) do %><i class="fa fa-cog"></i> Edit Profile<% end %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to logout_path, method: :delete do %><i class="fa fa-sign-out"></i> Log Out<% end %></li>
            </ul>
          </li>
          <!-- End dropdown -->
        <% else %>
          <li><%= link_to 'Log In', login_path %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
